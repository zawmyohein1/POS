@model POS.Domain.ViewModels.UserModel

@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Admin Panel Login</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="/Users/Login"><b>Admin</b>Login</a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Sign in to start your session</p>

                <form action="/Users/Login/" method="post" id="form_validation">
                    @Html.AntiForgeryToken()
                    <div class="input-group mb-3">
                        <input name="Email" type="email" id="Email" class="form-control" placeholder="Email">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                 
                    <div>
                        <span id="Username-error" class="text-danger" style="display: none;">Username is required</span>
                    </div>                   

                    <div class="input-group mb-3">
                        <input type="password" name="Password" id="Password" class="form-control" placeholder="Password">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>                       
                    </div>
                    <div>
                        <span id="Password-error" class="text-danger" style="display: none;">Password is required</span>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="remember">
                                <label for="remember">
                                    Remember Me
                                </label>
                            </div>
                        </div>
                         @*/.col*@ 
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                        </div>
                         @*/.col*@ 
                    </div>

                    @if (Model != null && Model.ResultCode != 0)
                    {
                        <div style="margin-top:10px" class="form-group">
                            <div class="col-sm-12 controls">
                                <label style="color:red">Login fail, please try again.</label>
                            </div>
                        </div>
                    }
                </form>

                <!--<div class="social-auth-links text-center mb-3">
                    <p>- OR -</p>
                    <a href="#" class="btn btn-block btn-primary">
                        <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
                    </a>
                    <a href="#" class="btn btn-block btn-danger">
                        <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
                    </a>
                </div>-->
                <!-- /.social-auth-links -->

                <!--<p class="mb-1">
                    <a href="forgot-password.html">I forgot my password</a>
                </p>
                <p class="mb-0">
                    <a href="register.html" class="text-center">Register a new membership</a>
                </p>-->
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- jQuery Validation  -->
    <script src="~/plugins/jquery-validation/jquery.validate.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/dist/js/adminlte.min.js"></script>

</body>
</html>
<script>
    $(document).ready(function () {

        $("#Email").focus();

        $('#form_validation').submit(function (e) {           

            var errcount = 0;
            if ($('#Email').val() == '') {
                e.preventDefault();
                errcount += 1;
                $('#Username-error').show();
            }
            else {
                $('#Username-error').hide();
            }
            if ($('#Password').val() == '') {
                e.preventDefault();
                errcount += 1;
                $('#Password-error').show();
            }
            else {
                $('#Password-error').hide();
            }

            if (errcount != 0) {
                $("#login-username").focus();
                return false;
            }
        });
    });


</script>
