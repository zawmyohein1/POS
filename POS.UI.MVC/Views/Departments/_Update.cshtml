@model POS.Domain.ViewModels.DepartmentModel

<div class="modal fade" id="Custom-myModal">
    <div class="modal-dialog modal-md">
        <div class="modal-content ">
            <form asp-action="UpdateDepartment" asp-controller="Departments" asp-antiforgery="true"
                  data-ajax-success="success"
                  data-ajax-fail="fail"
                  data-ajax="true"
                  data-ajax-method="post">

                @Html.AntiForgeryToken()
                <partial name="_ModalHeader" view-data="ViewData" />
                
                <div class="modal-body">
                   
                    <input type="hidden" asp-for="Department_ID" />
                    <div class="form-group">
                        <label asp-for="Department_Name"></label>
                        <input asp-for="Department_Name" class="form-control" />
                        <span asp-validation-for="Department_Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" />
                    </div>
                </div>
                <<partial name="_ModalFooter" />
            </form>
        </div>
    </div>
</div>
<partial name="_ValidationScriptsPartial"></partial>
<partial name="_DialogScriptsPartial"></partial>