@model POS.Domain.ViewModels.DepartmentModel
<div class="modal fade" id="Custom-myModal">
    <div class="modal-dialog modal-lg">
        <form role="form" class="form-horizontal" method="post" action="/Departments/CreateDepartment" id="form_validation">
            @Html.AntiForgeryToken()
            <div class="modal-content ">
                <div class="modal-header bg-primary">
                    <h4 class="modal-title">Add Department</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input-group na-for="@Model.Department_Name"></input-group>
                    <input-group name="Description"></input-group>

                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {

        $.validator.setDefaults({
            submitHandler: function (form) {
                $(form).ajaxSubmit({

                    beforeSubmit: function disableButton(data, form, opts) {
                    },
                    beforeSend: function (arr, form, options) { },
                    uploadProgress: function (event, position, total, percentComplete) { },
                    success: function (data) {
                        successCreate(data);
                    },
                    error: function (xhr) {
                        console.log(xhr);
                    },
                    complete: function (xhr) { }
                });
            }
        });

        $('#form_validation').validate({

            rules: {
                Name: {
                    required: true
                },
                Description: {
                    required: true
                },
            },
            messages: {
                Name: {
                    required: "Please enter a department name",

                },
                Phone: {
                    required: "Please enter a department description",
                },
            },
            errorElement: 'span',
            errorPlacement: function (error, element) {
                error.addClass('invalid-feedback');
                element.closest('.form-group').append(error);
            },
            highlight: function (element, errorClass, validClass) {
                $(element).addClass('is-invalid');
            },
            unhighlight: function (element, errorClass, validClass) {
                $(element).removeClass('is-invalid');
            }
        });
    });

    var successCreate = (data) => {

        if (data.resultCode == 0) {
            $('#Custom-myModal').modal('hide');
            showDialog("", 'Saved Successfully!', "success", "Departments", "Index", data.id, true, false, null, 0);
        }
        else {
            showDialog('SomethingWentWrong', data.resultDescription, "error", "", "", 0, false, false, null, 0);
        }
    }
    var failCreate = data => {

        showDialog('SomethingWentWrong', data.resultDescription, "error", "", "", 0, false, false, null, 0);
    }
</script>