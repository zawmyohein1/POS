@model POS.Domain.ViewModels.DbSupplierModelList

@{
    ViewBag.Title = "Listing Suppliers";
    Layout = null;
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Manage DbSupplier</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <button type="button" id="btnAddNew" class=" btn btn-block btn-primary  float-sm-right btnAddNew">Add</button>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-striped projects customTbl scrollWrapTbl listingTbl">
                            @*<table class=" table table-bordered table-striped customTbl listingTbl">*@
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>CountryCode</th>
                                    <th>DateCreated</th>                                
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.supplierModelList)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Supplier_ID)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Supplier_Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                        <td>@Html.DisplayFor(modelItem => item.CountryCode)</td>
                                        <td>   @item.DateCreated.ToString("dd/MM/yyyy")</td>                                       
                                        <td><a href="#" class="lnkEdit" data-para="@item.Supplier_ID"><i class="fa fa-fw fa-edit"></i></a> | <a href="#" class="lnkDelete" data-para="@item.Supplier_ID"><i class="fa fa-fw fa-trash"></i></a></td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>

                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>


<!-- Modal -->
<div id="ppcreate">
</div>

<div id="ppcreate"></div>
