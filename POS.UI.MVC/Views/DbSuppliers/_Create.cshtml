@model POS.Domain.ViewModels.DbSupplierModel

<div class="modal fade" id="Custom-myModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content ">
            <form asp-action="CreateDbSupplier" asp-asp-controller="DbSuppliers" asp-antiforgery=true
                  data-ajax-success="success"
                  data-ajax-fail="fail"
                  data-ajax="true"
                  data-ajax-method="POST">

                @Html.AntiForgeryToken()

                <partial name="_ModalHeader" view-data="ViewData" />

                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="Supplier_Name"></label>
                        <input asp-for="Supplier_Name" class="form-control" />
                        <span asp-validation-for="Supplier_Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input type="email" asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                  
                    <div class="form-group">
                        <label asp-for="CountryCode"></label>
                        <input asp-for="CountryCode" class="form-control" />
                        <span asp-validation-for="CountryCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DateCreated"></label>
                        <input asp-for="DateCreated" class="form-control" />
                        <span asp-validation-for="DateCreated" class="text-danger"></span>
                    </div>                   
                </div>

                <partial name="_ModalFooter" />

            </form>
        </div>
    </div>
</div>
<partial name="_ValidationScriptsPartial"></partial>
<partial name="_DialogScriptsPartial"></partial>
